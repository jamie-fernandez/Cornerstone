{
    "name": "cornerstone",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "engines": {
        "node": "^20.19.0 || >=22.12.0"
    },
    "scripts": {
        "setup": "node commands/setup-dev.js",
        "start": "node commands/start-dev.js",
        "build:all": "bun run build:UI && npm bun build:backend",
        "build:UI": "bun run build --prefix ui",
        "build:backend": "node commands/build-backend.js",
        "test": "cd ui; bun run test:unit",
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test:unit": "vitest",
        "prepare": "cypress install",
        "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
        "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
        "lint:fix": "bunx biome check --write"
    },
    "dependencies": {
        "@faker-js/faker": "^10.1.0",
        "@fontsource/roboto": "^5.2.8",
        "@mdi/js": "^7.4.47",
        "@tailwindcss/vite": "^4.1.17",
        "@unhead/vue": "^2.0.19",
        "concurrently": "^9.2.1",
        "pinia": "^3.0.3",
        "tailwindcss": "^4.1.17",
        "unplugin-fonts": "^1.4.0",
        "vue": "^3.5.22",
        "vue-router": "^4.6.3",
        "vuetify": "^3.10.11"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.7",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/test-utils": "^2.4.6",
        "cypress": "^15.5.0",
        "globals": "^16.4.0",
        "jsdom": "^27.0.1",
        "prettier": "3.6.2",
        "start-server-and-test": "^2.1.2",
        "vite": "^7.1.11",
        "vite-plugin-vue-devtools": "^8.0.3",
        "vitest": "^3.2.4"
    }
}
