{
    "theme": "Catppuccin Macchiato",
    "buffer_font_size": 14,
    "buffer_line_height": {
        "custom": 1.6
    },
    "tab_size": 2,
    "preferred_line_length": 80,
    "soft_wrap": "editor_width",
    "ensure_final_newline_on_save": true,
    "remove_trailing_whitespace_on_save": true,
    "vim_mode": true,
    "languages": {
        "Python": {
            "format_on_save": "on",
            "formatter": "language_server",
            "language_servers": ["!pyright", "ruff"]
        }
    },
    "lsp": {
        "biome": {
            "settings": {
                "organize_imports": {
                    "enabled": true
                }
            }
        },
        "ruff": {
            "settings": {
                "args": ["--no-cache", "--fix", "--unsafe-fixes"]
            }
        }
    },
    "terminal": {
        "shell": {
            "program": "/bin/zsh"
        }
    },
    "telemetry": {
        "diagnostics": true,
        "metrics": false
    }
}
